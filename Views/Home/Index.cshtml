@{
    ViewData["Title"] = "Home Page";
}
@model formsValidation.Models.User

<form method="post" asp-action="CheckValidationBehind">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" asp-for="username" id="username" placeholder="Email">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Password</label>
            <input type="password" class="form-control" asp-for="password" id="password" placeholder="Password">
        </div>
    </div>

    <button type="submit" class="btn btn-dark">Sign in</button>
</form>
